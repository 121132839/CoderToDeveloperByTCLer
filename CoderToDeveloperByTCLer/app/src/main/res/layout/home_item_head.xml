<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/ll_head_container"
              android:layout_width="match_parent"
              android:layout_height="45dp"
              android:foreground="?attr/selectableItemBackground"
              android:orientation="horizontal">

    <View
        android:layout_width="2dp"
        android:id="@+id/home_head_item_line"
        android:layout_height="match_parent"
        android:background="@color/home_orange"/>

    <TextView

        android:id="@+id/tv_home_head_item_name"
        style="@style/HomeHeadNameItem"
        android:text="KPI"/>

    <TextView
        android:id="@+id/tv_home_head_item_time"
        style="@style/HomeLightText"
        android:layout_weight="1"
        android:layout_marginLeft="16dp"
        android:layout_gravity="center_vertical"/>


    <TextView
        style="@style/HomeLightText"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="16dp"
        android:text="更多"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>